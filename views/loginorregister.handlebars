<div class="box container" id="login-or-register">
    <div class="field">
        <label class="label">Username</label>
        <p class="control has-icons-left">
            <input class="input" id="username-input" type="text" placeholder="Username">
            <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
            </span>
        </p>
        {{#if newUser}}
        <p class="help">Must be unique. Get creative.</p>
        {{/if}}
    </div>
    <div class="field">
        <label class="label">Password</label>
        <p class="control has-icons-left">
            <input class="input" id="password-input" type="password" placeholder="Password">
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </p>
        {{#if newUser}}
        <p class="help">Must be between 8 - 25 characters.</p>
        {{/if}}
    </div>
    <hr>
    <button class="button is-ghost" id="switch">
        {{#if newUser}}
        Login instead?
        {{else}}
        Register instead?
        {{/if}}
    </button>
    <div class="field is-grouped is-grouped-centered">
        <p class="control">
            <button class="button is-dark" id="login-or-register-button">
                {{#if newUser}}
                Register
                {{else}}
                Login
                {{/if}}
            </button>
        </p>
    </div>
</div>